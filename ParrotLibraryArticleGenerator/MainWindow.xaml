                    <TextBlock>Настоящие попугаи</TextBlock>
                    <TextBlock>Несторы</TextBlock>
                    <TextBlock>Совиные попугаи</TextBlock>
                    <TextBlock>Щетинкоголовые</TextBlock>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Род:  "></TextBlock>
                <ComboBox x:Name="GenderCombox">
                    <TextBlock>Дятловые попугаи</TextBlock>
