        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParrotLibraryArticleGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="672.8" Width="800">
    <Grid >
